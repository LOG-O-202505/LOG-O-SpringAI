<!-- OAuth2 Onboarding Modal -->
<div class="modal fade" id="onboardingModal" tabindex="-1" aria-labelledby="onboardingModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="onboardingModalLabel">
                    <i class="fas fa-user-plus mr-2"></i>Complete Your Profile
                </h5>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle mr-2"></i>
                    Please provide additional information to complete your profile.
                </div>
                <form id="onboarding-form">
                    <input type="hidden" id="onboarding-user-id" name="userId">

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="onboarding-gender">Gender <span class="text-danger">*</span></label>
                            <select class="form-control" id="onboarding-gender" name="gender" required>
                                <option value="">Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                <option value="O">Other</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="onboarding-birthday">Birthday <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" id="onboarding-birthday" name="birthday" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="onboarding-nickname">Change Nickname (Optional)</label>
                        <input type="text" class="form-control" id="onboarding-nickname" name="nickname"
                               placeholder="Enter new nickname (optional)">
                        <small class="form-text text-muted">Leave blank to keep current nickname.</small>
                    </div>

                    <div class="form-group">
                        <label for="onboarding-notion-page-id">Notion Page ID (Optional)</label>
                        <input type="text" class="form-control" id="onboarding-notion-page-id" name="notionPageId"
                               placeholder="Enter Notion page ID (optional)">
                        <small class="form-text text-muted">Connect with Notion by entering your page ID.</small>
                    </div>

                    <div class="alert alert-danger d-none" id="onboarding-error"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success btn-block" id="complete-onboarding-btn">
                    <i class="fas fa-check mr-2"></i>Complete Profile
                </button>
            </div>
        </div>
    </div>
</div>

